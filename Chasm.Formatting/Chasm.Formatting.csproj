<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Project Properties -->
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <TargetFrameworks>
      net7.0;
      netcoreapp1.0;
      netstandard1.0;
      net45;
    </TargetFrameworks>
    <!--
      |            Target Frameworks            | - Justification
      |===============|================|========|==============================
      | net7.0        |                |        | - latest API, for use in IDE
      | netcoreapp1.0 | netstandard1.0 | net45  | - lowest supported API
    -->
    
    <!-- Header -->
    <AssemblyName>Chasm.Formatting</AssemblyName>
    <PackageId>$(AssemblyName)</PackageId>
    <Version>2.0.0</Version>
    <Authors>Abbysssal</Authors>
    <Company>$(Authors)</Company>
    <Copyright>Copyright Â© Abbysssal 2023</Copyright>

    <!-- Title, Description, Tags -->
    <Title>$(AssemblyName)</Title>
    <Description>
      Provides various formatting and parsing utility types and methods.
    </Description>
    <PackageTags>formatting parsing utility</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>

  </PropertyGroup>

  <ItemGroup>
    <None Remove="Chasm.Formatting.csproj.DotSettings" />
    <None Include="README.md" Pack="true" PackagePath="\" />
    <InternalsVisibleTo Include="Chasm.Formatting.Tests" />
    <PackageReference Include="JetBrains.Annotations" Version="2023.2.0" PrivateAssets="all" />
  </ItemGroup>

</Project>
